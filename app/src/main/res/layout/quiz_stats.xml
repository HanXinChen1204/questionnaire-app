<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_text_margin"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question_text_view"
                style="@style/CardViewText" />

            <TextView
                android:id="@+id/card_text1"
                style="@style/CardViewText"
                android:text="@string/your_answer"
                android:layout_below="@id/question_text_view" />

            <TextView
                android:id="@+id/user_answer"
                style="@style/CardViewText"
                android:layout_below="@id/question_text_view"
                android:layout_toEndOf="@id/card_text1"
                android:layout_toRightOf="@id/card_text1" />

            <TextView
                android:id="@+id/card_text2"
                style="@style/CardViewText"
                android:layout_below="@id/user_answer"
                android:text="@string/correct_answer" />

            <TextView
                android:id="@+id/correct_answer"
                style="@style/CardViewText"
                android:layout_below="@id/user_answer"
                android:layout_toEndOf="@id/card_text2"
                android:layout_toRightOf="@id/card_text2" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
